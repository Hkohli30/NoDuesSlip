<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.example.hkohli.orthodox.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:background="@drawable/loginback"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dip"
        android:id="@+id/login_card"
        android:layout_marginBottom="10dp"

        xmlns:card_view ="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#80FFFFFF"
        card_view:cardCornerRadius="28dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/login_username_imageview"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginLeft="20dp"
                />
            <EditText
                android:id="@+id/login_username_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/login_username_imageview"
                android:hint="Username"
                android:textSize="25dip"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="20dp"
                android:textColor="@android:color/black"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_password_imageview"
                android:layout_below="@id/login_username_imageview"
                android:src="@mipmap/ic_launcher"
                android:layout_marginBottom="5dip"
                android:layout_marginRight="10dip"
                android:layout_marginLeft="20dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_password_edittext"
                android:textSize="25dip"
                android:layout_below="@id/login_username_edittext"
                android:layout_toRightOf="@id/login_password_imageview"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginBottom="5dip"
                android:layout_marginRight="20dp"
                android:textColor="@android:color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_linear1"
                android:layout_below="@id/login_password_edittext"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/login_college_imageview"
                    android:layout_marginRight="10dip"
                    android:layout_marginLeft="20dp"
                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_spinner"
                    android:layout_below="@id/login_password_edittext"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dip"
                    android:layout_marginRight="20dp"
                    >
                </Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/login_linear1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/login_type_imageview"
                    android:layout_marginRight="10dip"
                    android:layout_marginLeft="20dp"
                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_spinner2"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dip"
                    android:layout_marginRight="20dp"
                    />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_card_button"
            android:layout_below="@id/login_card"

            xmlns:card_view ="http://schemas.android.com/apk/res-auto"
            card_view:cardElevation="0dp"
            card_view:cardBackgroundColor="#80FFFFFF"
            card_view:cardCornerRadius="28dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="15dip"
                android:text="LOGIN"
                android:textSize="30dip"
                android:textColor="@color/colorPrimary"
                android:textColorHighlight="#80FFFFFF"
                android:id="@+id/login_screen_button"
                />



        </android.support.v7.widget.CardView>
</RelativeLayout>
