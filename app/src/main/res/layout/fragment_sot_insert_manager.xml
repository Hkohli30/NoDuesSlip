<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hkohli.orthodox.SotInsertManager"
    android:scrollbars="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:card_view ="http://schemas.android.com/apk/res-auto"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="0dp"
            card_view:cardBackgroundColor="#F2BA51"
            card_view:cardCornerRadius="28dp"
            android:clickable="false"
            android:foreground="?android:attr/selectableItemBackground"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    >
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="55dp"
                        android:src="@drawable/user_admin"
                        android:layout_marginRight="5dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="NAME"
                        android:textColor="@android:color/holo_red_light"
                        android:maxLength="30"
                        android:textSize="22dp"
                        android:id="@+id/sot_insert_name"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    >
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:src="@drawable/user"
                        android:layout_marginRight="5dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="USERNAME"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="22dp"
                        android:id="@+id/sot_insert_username"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    >
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="55dp"
                        android:src="@drawable/password"
                        android:layout_marginRight="5dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="PASSWORD"
                        android:textColor="@android:color/holo_red_light"
                        android:maxLength="30"
                        android:textSize="22dp"
                        android:id="@+id/sot_insert_password"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    >
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="55dp"
                        android:src="@drawable/phone"
                        android:layout_marginRight="5dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CONTACT NUMBER"
                        android:textSize="22dp"
                        android:textColor="@android:color/holo_red_light"
                        android:maxLength="12"
                        android:inputType="number"
                        android:id="@+id/sot_insert_phone"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    >
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="55dp"
                        android:src="@drawable/email"
                        android:layout_marginRight="5dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="EMAIL"
                        android:textSize="22dp"
                        android:textColor="@android:color/holo_red_light"
                        android:inputType="textEmailAddress"
                        android:id="@+id/sot_insert_email"
                        />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:text="Select Supervisor Type"
                    android:textSize="22dp"
                    android:textColor="@android:color/holo_red_light"
                    android:id="@+id/sot_insert_category"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:card_view ="http://schemas.android.com/apk/res-auto"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="0dp"
            card_view:cardBackgroundColor="#d2f4c736"
            card_view:cardCornerRadius="28dp"
            android:clickable="false"
            android:foreground="?android:attr/selectableItemBackground"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="22dp"
                android:text="ADD USER"
                android:textColor="@android:color/holo_red_light"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:id="@+id/sot_insert_add_user"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />
        </android.support.v7.widget.CardView>

    </LinearLayout>
</FrameLayout>
